class Solution {
public:
    long long minimumSteps(string s) {
        long long ans=0;
        int n=s.length();
        int i=0,j=0;
        while(j<n){
            if(s[j]=='0'){
                ans+=(j-i);
                i++;
            }
            j++;
        }
        return ans;
    }
};
