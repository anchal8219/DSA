int lengthOfLongestSubstring(string s) {
    int n = s.size();
    int ans = 0, i = 0, j = 0;
    unordered_set<char> seen;

    while (i < n && j < n) {
        if (seen.find(s[j]) == seen.end()) {
            seen.insert(s[j++]);
            ans = max(ans, j - i);
        } else {
            seen.erase(s[i++]);
        }
    }

    return ans;
}
