#include <bits/stdc++.h>
using namespace std;
#define ll long long 
#define mod 1000000007

int main() {
	// your code goes here
	ll t,n;
	cin>>t;
	
	while(t--){
	    cin>>n;
	    ll p[n];
	    ll n1 = sizeof(p) / sizeof(p[0]);
	    for(int i=0;i<n;i++)
	    cin>>p[i];
	    sort(p, p + n1, greater<ll>());
	    ll ans=0;
	    for(int i=0;i<n;i++){
	        ans += max((ll)0,p[i]-i);
	        ans %= mod;
	    }
	    cout<<ans<<endl;
	}
	return 0;
}
