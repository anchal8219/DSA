#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int n,d;
	cin>>n>>d;
	int l[n];
	for(int i=0;i<n;i++)
	cin>>l[i];
	
	int i=0,c=0;
	sort(l,l+n);
	while(i<n-1){
	    if(abs(l[i]-l[i+1])<=d){
	        c++;
	        i++;
	    }
	    i++;
	}
	cout<<c<<endl;
	return 0;
}
