class Solution {
public:
    // int divisorSubstrings(int num, int k) {
    //     int n=num;
    //     long mod = pow(10, k);
    // int c = 0;
    
    // while (n >= mod/10) {
    //     int r = n % mod;
    //     if (r != 0 && num % r == 0) {
    //         c++;
    //     }
    //     n = n / 10;
    // }
    
    // return c;
    // }

//                   OR
    int divisorSubstrings(int num, int k) {
        string s = to_string(num);
        int i=0,j=0,c=0;
        while(j<s.length()){
            if(j-i+1 < k ) j++;
            else if(j-i+1 == k ){
                string str = s.substr(i,k);
                int g = stoi(str);
                if(g!=0 && num%g==0) c++;
                i++;
                j++;
            }
        }
        return c;
        
    }

};
