class Solution {
public:
    string reverseVowels(string s) {
        int i = 0, j = s.length() - 1;
        while (i < j) {
            // Check if s[i] is a vowel
            while (i < j && !isVowel(s[i])) {
                i++;
            }
            // Check if s[j] is a vowel
            while (i < j && !isVowel(s[j])) {
                j--;
            }
            // Swap the vowels
            swap(s[i], s[j]);
            i++;
            j--;
        }
        return s;
    }

private:
    bool isVowel(char c) {
        return (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u' ||
                c == 'A' || c == 'E' || c == 'I' || c == 'O' || c == 'U');
    }
};
