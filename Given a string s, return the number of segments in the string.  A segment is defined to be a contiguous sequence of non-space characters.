class Solution {
public:
    int countSegments(string s) {
        istringstream iss(s);
        stack<string> words;

        while (iss >> s) {
            words.push(s);
        }

        return words.size();
    }
};


class Solution {
public:
    int countSegments(string s) {
        int count = 0;
        bool inSegment = false;

        for (char c : s) {
            if (c != ' ') {
                if (!inSegment) {
                    inSegment = true;
                    count++;
                }
            } else {
                inSegment = false;
            }
        }

        return count;
    }
};

