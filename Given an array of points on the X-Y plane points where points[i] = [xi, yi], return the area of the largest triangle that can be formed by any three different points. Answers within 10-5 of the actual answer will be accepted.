double largestTriangleArea(vector<vector<int>>& points) {
    double max_area = 0.0;
    int n = points.size();
    for (int i = 0; i < n - 2; i++) {
        for (int j = i + 1; j < n - 1; j++) {
            for (int k = j + 1; k < n; k++) {
                // Extract the coordinates of the three points
                int x1 = points[i][0];
                int y1 = points[i][1];
                int x2 = points[j][0];
                int y2 = points[j][1];
                int x3 = points[k][0];
                int y3 = points[k][1];

                // Calculate the area of the triangle using Shoelace formula
                double area = 0.5 * abs((x1 * (y2 - y3) + x2 * (y3 - y1) + x3 * (y1 - y2)));
                
                // Update the max_area if the current area is larger
                max_area = max(max_area, area);
            }
        }
    }
    return max_area;
}
