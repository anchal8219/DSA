queue<int>q;
    RecentCounter() {
        
    }
    
    int ping(int t) {
        if(q.size()==0){
            q.push(t);
            return 1;
        }
        else{
            if(t<=3000)
            q.push(t);
            else{
                int m = t-3000;
                while(q.size()!=0  && q.front()<m)
                q.pop();
                q.push(t);
            }
            return q.size();

        }
        
    }
