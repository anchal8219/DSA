

class Solution {
public:
    int furthestDistanceFromOrigin(string moves) {
        int n=moves.length();
        int cl=0,cr=0,cd=0;
        
        for(int i=0;i<n;i++)
        {
            if(moves[i]=='L')
                cl++;
            else if(moves[i]=='R')
                cr++;
            else
                cd++;
        }
        if(cd==n)
            return n;
        int sum=0;
        if(cl>cr)
            return (cl+cd-cr);
        else if(cl<cr)
            return (cr+cd-cl);
        else 
            return (cl+cd-cr);
    }
};
