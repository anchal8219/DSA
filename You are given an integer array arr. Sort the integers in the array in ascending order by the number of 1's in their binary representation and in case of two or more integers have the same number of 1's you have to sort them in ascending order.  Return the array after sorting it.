class Solution {
public:
int count(int n) {
    int c = 0;
    while (n != 0) {
        if ((n & 1) == 1) c++;
        n >>= 1;
    }
    return c;
}

vector<int> sortByBits(vector<int>& a) {
    vector<pair<int,int>> v; // Using a pair to store (count, value)
    vector<int> ans;

    for (int i = 0; i < a.size(); i++) {
        int f = count(a[i]);
        v.push_back({f,a[i]});
    }
    sort(v.begin(),v.end());

    for (auto i :v) {
        ans.push_back(i.second);
    }

    return ans;
}

};
