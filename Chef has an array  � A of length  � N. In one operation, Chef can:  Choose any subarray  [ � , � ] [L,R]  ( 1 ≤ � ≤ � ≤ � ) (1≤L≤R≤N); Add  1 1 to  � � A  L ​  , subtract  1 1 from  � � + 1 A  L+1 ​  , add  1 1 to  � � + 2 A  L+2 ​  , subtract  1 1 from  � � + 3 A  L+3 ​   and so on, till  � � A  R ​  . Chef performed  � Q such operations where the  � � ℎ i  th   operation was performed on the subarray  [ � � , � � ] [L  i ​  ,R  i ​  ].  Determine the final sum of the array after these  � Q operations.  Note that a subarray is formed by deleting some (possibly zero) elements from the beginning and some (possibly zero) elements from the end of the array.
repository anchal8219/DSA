#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main() {
	int t;
	cin>>t;
	while(t--){
	 int n,q,sum=0;
	 cin>>n>>q;
	 int a;
	 for(int i=0;i<n;i++){
	     cin>>a;
	     sum+=a;
	 }
	 
	  for(int i=0;i<q;i++){
	      int a,b;
	      cin>>a>>b;
	      if((b-a)%2==0){
	          sum++;
	      }
	  }
	  cout<<sum<<endl;
	}
	return 0;
}
