#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	while(t--){
	    int n,k;
	    cin>>n>>k;
	    int w[n];
	    for(int i=0;i<n;i++)
	    cin>>w[i];
	    
	    sort(w,w+n);
	    int s1=0,s2=0;
	    int diff;
	    if(k<=(n/2)){
	        for(int i=0;i<k;i++)
	        s1 += w[i];
	        for(int i=k;i<n;i++)
	        s2 += w[i];
	        
	        diff = abs(s1-s2);
	    }
	    else{
	        for(int i=n-1;i>=n-k;i--)
	        s2 += w[i];
	        for(int i=(n-k)-1;i>=0;i--)
	        s1 += w[i];
	        
	        diff = abs(s1-s2);
	        
	    }
	    
	   // int diff = (s2-s1);
	    cout<<diff<<endl;
	}
	return 0;
}
