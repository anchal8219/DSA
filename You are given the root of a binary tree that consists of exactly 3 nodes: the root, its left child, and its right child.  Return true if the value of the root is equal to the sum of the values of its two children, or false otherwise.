class Solution {
public:
    bool checkTree(TreeNode* root) {
        if(root==NULL) return 0;
        queue<TreeNode* >q;
        int sum=0;
        q.push(root);
            TreeNode* curr = q.front();
            if(curr->left!=NULL) sum+= curr->left->val;
            if(curr->right!=NULL) sum+= curr->right->val;
            
        return (curr->val==sum);
    }
};
