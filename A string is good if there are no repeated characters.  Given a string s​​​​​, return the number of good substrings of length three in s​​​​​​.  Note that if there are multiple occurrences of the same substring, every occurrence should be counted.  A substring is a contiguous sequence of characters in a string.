class Solution {
public:
    int countGoodSubstrings(string s) {
        unordered_map<char,int>mp;
        int i=0,j=0,c=0,k=3;
        while(j<s.length()){
            mp[s[j]]++;
            if(j-i+1==k){
                if(mp.size()==j-i+1) c++;
            }
            else if(j-i+1>k){
            
                i++;
            }
            
            j++;
        }
        return c;
    }
};
