class Solution {
public:
    string toGoatLatin(string s) {
        istringstream iss(s);
        string w,k;
        char g;
        int c=0;
        while(iss >> w){
            c++;
            if(w[0]=='a' || w[0]=='i' || w[0]=='e' || w[0]=='o' || w[0]=='u' || w[0]=='U' || w[0]=='I' || w[0]=='A' || w[0]=='E' || w[0]=='O'){
                w+="ma";
                k+=w;

            }
            else{
                g = w[0];
                w.erase(0,1);
                w+=g;
                w+="ma";
                k+=w;
            }
            for (int i = 0; i < c; i++) {
                k += 'a';
            }
            k+=" ";
        }
        k.pop_back();
        return k;
    }
};
