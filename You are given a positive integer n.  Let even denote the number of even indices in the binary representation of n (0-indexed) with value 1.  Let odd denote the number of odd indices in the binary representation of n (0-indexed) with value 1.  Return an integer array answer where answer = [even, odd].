class Solution {
public:
    vector<int> evenOddBit(int n) {
        int ev=0,od=0,i=0;
        while(n!=0){
            if((n&1)==1){
                if(i%2==0){
                    ev++;
                }
                else od++;
            }
            n >>= 1;
            i++;
        }
        vector<int> result = {ev, od};
        return result;

    }
};
