Node* connect(Node* root) {
        queue<Node*>q;
        if(root==NULL)
        return NULL;
        q.push(root);
        while(!q.empty())
        {
            int size=q.size();
            for(int i=0;i<size;i++)
            {
                Node* curr=q.front();
                q.pop();
                if(curr->left)
                q.push(curr->left);
                if(curr->right)
                q.push(curr->right);
                if(curr==root)
                {
                root->next=NULL;
                break;
                }
                if(i==size-1)
                {
                    curr->next=NULL;
                }
                else{
                    curr->next=q.front();
                }
                
            }
        }
        return root;
    }
