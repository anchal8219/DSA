class Solution {
public:
    int longestAlternatingSubarray(vector<int>& nums, int t) {
        int n=nums.size();
        int ans=0;
        for(int i=0;i<n;i++){
            int c=0;
            if(nums[i] %2 ==0 && nums[i]<=t){
                c++;
                while(i+1<n){
                    if(nums[i+1]%2 != nums[i]%2  && nums[i+1]<=t) c++;
                    else break;
                    i++;
                }
                ans = max(ans,c);
                
            }
        }
        return ans;
    }
};
